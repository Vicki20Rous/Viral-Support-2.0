{
  "dependencies": {
    "axios": "^0.21.1",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "craco": "^0.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.11.18",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "react": "^17.0.1"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node ./servers/server.js",
    "start:dev": "concurrently \"nodemon ./servers/server.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "install": "concurrently \"cd client && npm install\" \"cd servers && npm install\"",
    "test": "echo \"hello world\""
  },
  "name": "viral-support-2.0",
  "description": "Viral Support is website that provides consumers with the latest statistics, news, vaccine locations and safety tips regarding the coronavirus.",
  "version": "1.0.0",
  "main": "servers/server.js",
